generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String
  password String
  audio    Audio[]
}

model Audio {
  id         Int    @id @default(autoincrement())
  audio_name String
  audio      Bytes  @db.ByteA
  user_id    Int
  audio_id   User   @relation(fields: [user_id], references: [id])
}
